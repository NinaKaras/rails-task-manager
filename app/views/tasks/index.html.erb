<h1>Tasks</h1>

<ul>
  <% @tasks.each do |t| %>
    <li>
      <% if t.completed %>
      ✅
      <% else %>
      ❌
      <% end %>
      <%= link_to t.title, task_path(t) %> <%= link_to "🗑", task_path(t), method: :delete %>
    </li>
  <% end %>
</ul>


<div><%= link_to "Add a new task", new_task_path %></div>
